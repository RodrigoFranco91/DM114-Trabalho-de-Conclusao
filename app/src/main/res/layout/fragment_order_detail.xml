<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="orderDetailViewModel"
            type="br.com.rodrigo.dm114.order.OrderDetailViewModel" />
        <variable
            name="productViewModel"
            type="br.com.rodrigo.dm114.product.ProductViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/textViewOrderId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="OrderId:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/OrderId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:orderId="@{orderDetailViewModel.order.orderId}"
                app:layout_constraintEnd_toEndOf="@+id/textViewOrderId"
                app:layout_constraintStart_toStartOf="@+id/textViewOrderId"
                app:layout_constraintTop_toBottomOf="@+id/textViewOrderId" />

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Status:"
                app:layout_constraintEnd_toEndOf="@+id/OrderId"
                app:layout_constraintStart_toStartOf="@+id/OrderId"
                app:layout_constraintTop_toBottomOf="@+id/OrderId" />

            <TextView
                android:id="@+id/Status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{orderDetailViewModel.order.status}"
                app:layout_constraintEnd_toEndOf="@+id/textViewStatus"
                app:layout_constraintStart_toStartOf="@+id/textViewStatus"
                app:layout_constraintTop_toBottomOf="@+id/textViewStatus" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Date:"
                app:layout_constraintEnd_toEndOf="@+id/Status"
                app:layout_constraintStart_toStartOf="@+id/Status"
                app:layout_constraintTop_toBottomOf="@+id/Status" />

            <TextView
                android:id="@+id/Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{orderDetailViewModel.order.data.substring(0,16)}"
                app:layout_constraintEnd_toEndOf="@+id/textViewDate"
                app:layout_constraintStart_toStartOf="@+id/textViewDate"
                app:layout_constraintTop_toBottomOf="@+id/textViewDate" />

            <TextView
                android:id="@+id/textProduct"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Product"
                app:layout_constraintEnd_toEndOf="@+id/Date"
                app:layout_constraintStart_toStartOf="@+id/Date"
                app:layout_constraintTop_toBottomOf="@+id/Date" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:text="Name:"
                app:layout_constraintEnd_toEndOf="@+id/Date"
                app:layout_constraintStart_toStartOf="@+id/Date"
                app:layout_constraintTop_toBottomOf="@+id/Date" />

            <TextView
                android:id="@+id/Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{productViewModel.product.name}"
                app:layout_constraintEnd_toEndOf="@+id/textViewName"
                app:layout_constraintStart_toStartOf="@+id/textViewName"
                app:layout_constraintTop_toBottomOf="@+id/textViewName" />

            <TextView
                android:id="@+id/textViewCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Code:"
                app:layout_constraintEnd_toEndOf="@+id/Name"
                app:layout_constraintStart_toStartOf="@+id/Name"
                app:layout_constraintTop_toBottomOf="@+id/Name" />

            <TextView
                android:id="@+id/Code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{productViewModel.product.code}"
                app:layout_constraintEnd_toEndOf="@+id/textViewCode"
                app:layout_constraintStart_toStartOf="@+id/textViewCode"
                app:layout_constraintTop_toBottomOf="@+id/textViewCode" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Price:"
                app:layout_constraintEnd_toEndOf="@+id/Code"
                app:layout_constraintStart_toStartOf="@+id/Code"
                app:layout_constraintTop_toBottomOf="@+id/Code" />

            <TextView
                android:id="@+id/Price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:productPrice="@{productViewModel.product.price}"
                app:layout_constraintEnd_toEndOf="@+id/textViewPrice"
                app:layout_constraintStart_toStartOf="@+id/textViewPrice"
                app:layout_constraintTop_toBottomOf="@+id/textViewPrice" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>